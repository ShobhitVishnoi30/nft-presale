{
  "name": "nft-presale-ontract",
  "version": "1.0.0",
  "description": "A simple nft minting contract in which there is presale option in which only whitelisted users can participate",
  "main": "contracts/",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy": "npx hardhat run ./scripts/deploy.js",
    "clean": "npx hardhat clean",
    "lint:sol": "solhint --config .solhint.json  contracts/*.sol",
    "prettier": "prettier --write  contracts/*.sol",
    "prettier:list-different": "prettier --config .prettierrc --list-different **/*.{js,sol}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShobhitVishnoi30/NFT_Presale.git"
  },
  "keywords": [
    "NFT",
    "Ethereum",
    "solidity"
  ],
  "author": "Shobhit Vishnoi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ShobhitVishnoi30/NFT_Presale/issues"
  },
  "homepage": "https://github.com/ShobhitVishnoi30/NFT_Presale#readme",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@openzeppelin/contracts": "^4.7.3",
    "dotenv": "^16.0.1",
    "hardhat": "^2.10.1",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.21"
  }
}
